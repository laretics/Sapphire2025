<StatusMessage Message="@StatusMessage" />
<h3>Códigos de recuperación</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Guarde estos códigos en lugar seguro.</strong>
    </p>
    <p>
        Si pierde su dispositivo y no conserva estos códigos de recuperación perderá el acceso a su cuenta.
    </p>
</div>
<div class="row">
    <div class="col-md-12">
        @foreach (var recoveryCode in RecoveryCodes)
        {
            <div>
                <code class="recovery-code">@recoveryCode</code>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }
}
